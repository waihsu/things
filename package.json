{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot index.ts",
    "start": "NODE_ENV=production bun index.ts",
    "build": "bun run build.ts",
    "build:things_web": "bun run build.ts --app=things_web --outdir=dist/apps/things_web",
    "build:admin": "bun run build.ts --app=admin --outdir=dist/apps/admin",
    "build:chat_app": "bun run build.ts --app=chat_app --outdir=dist/apps/chat_app",
    "build:split": "bun run build:things_web && bun run build:admin && bun run build:chat_app",
    "deploy:things_web": "bunx wrangler pages deploy dist/apps/things_web --project-name things-web",
    "deploy:admin": "bunx wrangler pages deploy dist/apps/admin --project-name things-admin",
    "deploy:chat_app": "bunx wrangler pages deploy dist/apps/chat_app --project-name things-chat",
    "deploy:api": "bunx wrangler deploy --config wrangler.api.jsonc",
    "setup:prod": "bash ./scripts/setup-production.sh",
    "deploy:prod": "bash ./scripts/deploy-production.sh"
  },
  "dependencies": {
    "@better-auth/expo": "^1.4.18",
    "@hookform/resolvers": "^5.2.2",
    "@neondatabase/serverless": "^1.0.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.8",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-query": "^5.90.20",
    "better-auth": "^1.4.18",
    "bun-plugin-tailwind": "^0.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "elysia": "^1.4.24",
    "framer-motion": "^12.33.0",
    "hono": "^4.11.9",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.545.0",
    "next-themes": "^0.4.6",
    "pg": "^8.18.0",
    "postgres": "^3.4.8",
    "radix-ui": "^1.4.3",
    "react": "^19.2.4",
    "react-day-picker": "^9.13.1",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-router": "^7.13.0",
    "sonner": "^2.0.7",
    "sooner": "^1.1.4",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.24.0",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "add": "^2.0.6",
    "drizzle-kit": "^0.31.9",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "vite": "^7.3.1",
    "wrangler": "^4.64.0"
  }
}
